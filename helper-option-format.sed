# -s, --long
s/^\(-[a-zA-Z]\), \(--[a-zA-Z0-9-]\{2,\}\) *\([^ ].*\)$/    '(\1 \2)'{\1,\2}'[\3]' \\/

#  --long
s/^\(--[a-zA-Z0-9-]\{2,\}\) \{1,\}\([^ ].*\)$/    '\1[\2]' \\/

# -s ARG
s/^\(-[a-zA-Z]\) [A-Z-]\{1,\}  *\([^ ].*\)$/    '\1[\2]:' \\/

# -s ARG, --long=ARG
s/^\(-[a-zA-Z]\) [A-Z-]\{1,\}, \(--[a-zA-Z0-9-]\{2,\}\)=[A-Z-]\{1,\} *\([^ ].*\)$/    '(\1 \2)'{\1,\2=}'[\3]:' \\/

# --long=ARG
s/^\(--[a-zA-Z0-9-]\{2,\}\)=[A-Z0-9-]\{1,\} \{1,\}\([^ ].*\)$/    '\1=[\2]:' \\/
